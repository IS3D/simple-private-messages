.page-header
  %h1
    Compose Message
    .pull-right
      = link_to "Inbox", messages_path, :class => "btn"

= form_for @message, :url => messages_path do |f|
  %p
    = f.label :to
    = f.text_field :to, :class => "span4", :autocomplete => "off", "data-provide" => "typeahead", "data-source" => @users.to_json
    = error_message_on @message, :to
  %p
    = f.label :subject
    = f.text_field :subject, :class => "span4"
    = error_message_on @message, :subject
  %p
    = f.label :message
    = f.text_area :body, :class => "span4", :rows => 5
    = error_message_on @message, :body

  = submit_tag "Send", :class => "btn btn-success"